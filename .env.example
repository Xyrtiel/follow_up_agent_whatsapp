# Configuration de la base de données MongoDB
MONGO_INITDB_ROOT_USERNAME=votre_nom_utilisateur
MONGO_INITDB_ROOT_PASSWORD=votre_mot_de_passe_securise
MONGO_INITDB_DATABASE=followup_db
APP_DB_USER=votre_utilisateur_db
APP_DB_PASSWORD=votre_mot_de_passe_securise

# Configuration des ports
BACKEND_PORT=3000
FRONTEND_PORT=5173

DATABASE_URL=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@mongodb:27017/${MONGO_INITDB_DATABASE}

# Clé API pour Google Gemini
GEMINI_API_KEY=VOTRE_CLE_API_GEMINI

# Identifiants Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=VOTRE_AUTH_TOKEN_TWILIO
TWILIO_WHATSAPP_NUMBER=+14155238886 # Numéro du Sandbox Twilio par défaut

# Cible pour les tests
# Doit être au format international, ex: +33612345678
TARGET_PHONE_NUMBER=VOTRE_NUMERO_WHATSAPP_PERSONNEL

# Token d'authentification Ngrok
# Permet d'exposer votre serveur local pour recevoir les webhooks Twilio
NGROK_AUTHTOKEN=VOTRE_TOKEN_NGROK